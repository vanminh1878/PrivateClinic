<Page x:Class="PrivateClinic.View.QuanLiTiepDon.QuanLiTiepDonView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PrivateClinic.View.QuanLiTiepDon"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="710" d:DesignWidth="990"
      x:Name="QuanLiTiepDonViewPage"
      Title="QuanLiTiepDonView">
    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <ThicknessAnimation Storyboard.TargetName="QuanLiTiepDonViewPage"
                           Storyboard.TargetProperty="Margin"
                           From="426,0,0,0"
                           To="0"
                           Duration="0:0:0.2" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>
    <Grid>
        <Border Background="White" CornerRadius="25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="230"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <DockPanel >
                        <TextBlock VerticalAlignment="Center"
                                   Text="Danh sách bệnh nhân"
                                   FontSize="40"
                                   FontFamily="Segoe UI"
                                   FontWeight="SemiBold"
                                   Foreground="#348F6C"
                                   Margin="35 0 0 0"/>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 20 0" Orientation="Horizontal">
                            <Image Source="{StaticResource icMaleUserBlue}"
                                   Width="60"
                                   Height="60"
                                   HorizontalAlignment="Right"
                                   Margin="0 0 7 0"/>
                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                <TextBlock Text="Trần Thu Hằng"
                                           FontSize="22"
                                           FontWeight="SemiBold"
                                           FontFamily="Segoe UI"/>
                                <TextBlock Text="Nhân viên"
                                            FontSize="22"
                                            FontWeight="SemiBold"
                                            FontFamily="Segoe UI"/>
                            </StackPanel>

                        </StackPanel>

                    </DockPanel>
                    <Border BorderThickness="0 1 0 0" BorderBrush="Black" Margin="35 0 35 0" VerticalAlignment="Bottom" />
                </Grid>
                <Grid Grid.Row="1">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                        <!--SỐ LƯỢNG BỆNH NHÂN TỐI ĐA-->
                        <StackPanel Margin="23 32 19 20" Orientation="Horizontal">
                            <TextBlock Text="Số lượng bệnh nhân tối đa trong ngày:"
                                       FontFamily="Segoe UI"
                                       FontSize="22"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Margin="0 0 0 10"/>
                            <Border Margin="25 0 0 0" CornerRadius="10" Background="#D9D9D9" Width="80" Height="45">
                                <Grid>
                                    <TextBox BorderThickness="0" Margin="5 0 0 0" HorizontalAlignment="Left"  Width="50" Height="40" VerticalAlignment="Center" />
                                    <Button Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Grid>
                                                    <Image Source="{StaticResource icArrowUp}"  Stretch="UniformToFill"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button  Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Grid>
                                                    <Image Source="{StaticResource icArrowDown}" Stretch="UniformToFill"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Border>
                            <Button Margin="20 0"  Width="50" Height="50" HorizontalAlignment="Right" >
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Image Source="{StaticResource icRepair}" Stretch="UniformToFill"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button   Width="50" Height="50" HorizontalAlignment="Right" >
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Image Source="{StaticResource icSave}" Stretch="UniformToFill"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                        <!--SỐ LƯỢNG BỆNH NHÂN ĐÃ KHÁM HÔM NAY-->
                        <StackPanel Margin="23 0 19 0" Orientation="Horizontal">
                            <TextBlock Text="Số lượng bệnh nhân đã khám hôm nay:"
                                       FontFamily="Segoe UI"
                                       FontSize="22"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Margin="0 10 0 10"/>
                            <Border Margin="20 0 0 0" CornerRadius="10" Background="#D9D9D9" Width="80" Height="45">
                                <Grid>
                                    <TextBlock Margin="5 0 0 0" HorizontalAlignment="Left"  Width="50" Height="40" VerticalAlignment="Center" />
                                </Grid>
                            </Border>
                        </StackPanel>
                        <!--THANH TÌM KIẾM-->
                        <DockPanel Width="960">
                            <Border Width="590" Height="60" BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" Margin="23 13 0 0" CornerRadius="10">
                                <Grid>
                                    <TextBox
                                        Margin="20 0 0 0"
                                        HorizontalAlignment="Left"
                                        materialDesign:HintAssist.Hint="Nhập họ tên bệnh nhân cần tìm"
                                        FontFamily="Segoe UI"
                                        FontSize="20"
                                        FontStyle="Italic"
                                        VerticalAlignment="Center"
                                        BorderThickness="0"
                                        Width="520"
                                        Height="40"
                                        />

                                    <Button Margin="0 0 5 0"  Width="40" Height="40" HorizontalAlignment="Right" >
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Grid>
                                                    <Image Source="{StaticResource icSearch}" />
                                                </Grid>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Border>
                            <!--NÚT THÊM-->
                            <Button Content="       Thêm (F1)" FontSize="22" FontFamily="Segoe UI" FontWeight="Bold" Margin="5 0 5 0"  Width="170" Height="50" HorizontalAlignment="Right" >
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Border BorderBrush="Transparent" Background="#348F6C" CornerRadius="10">
                                                <Border.Effect>
                                                    <DropShadowEffect ShadowDepth="5" Color="Black" Opacity="0.5" BlurRadius="5"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <Image HorizontalAlignment="Left" Source="{StaticResource icAdd}"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </DockPanel>
                    </StackPanel>
                </Grid>
                <!--HEADER -->
                <Grid Grid.Row="2">
                    <Border Margin="10,20,0,0" Width="924" Height="50" CornerRadius="10" Background="#D9D9D9">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <TextBlock HorizontalAlignment="Center" FontFamily="Segoe UI" FontSize="20" FontWeight="DemiBold" Text="STT" VerticalAlignment="Center" />
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBlock HorizontalAlignment="Center" FontFamily="Segoe UI" FontSize="20" FontWeight="DemiBold" Text="Tên bệnh nhân" VerticalAlignment="Center" />
                            </Grid>
                            <Grid Grid.Column="2">
                                <TextBlock HorizontalAlignment="Center" FontFamily="Segoe UI" FontSize="20" FontWeight="DemiBold" Text="Giới tính" VerticalAlignment="Center" />
                            </Grid>
                            <Grid Grid.Column="3">
                                <TextBlock HorizontalAlignment="Center" FontFamily="Segoe UI" FontSize="20" FontWeight="DemiBold" Text="SDT" VerticalAlignment="Center" />
                            </Grid>
                            <Grid Grid.Column="4">
                                <TextBlock HorizontalAlignment="Center" FontFamily="Segoe UI" FontSize="20" FontWeight="DemiBold" Text="Ngày sinh" VerticalAlignment="Center" />
                            </Grid>
                            <Grid Grid.Column="5">
                                <TextBlock HorizontalAlignment="Center" FontFamily="Segoe UI" FontSize="20" FontWeight="DemiBold" Text="Địa chỉ" VerticalAlignment="Center" />
                            </Grid>
                            <Grid Grid.Column="6">
                                <TextBlock HorizontalAlignment="Center" FontFamily="Segoe UI" FontSize="20" FontWeight="DemiBold" Text="Thao tác" VerticalAlignment="Center" />
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
                <!--Listview item-->
                <Grid Grid.Row="3">
                    <ListView
              Margin="20 0 0 0"
              SelectionMode="Single"
              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
              ScrollViewer.VerticalScrollBarVisibility="Hidden" d:ItemsSource="{d:SampleData ItemCount=4}" >

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Width="924" Height="55" Margin="10 0 0 0" CornerRadius="10" Background="White">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <TextBlock Text="{Binding STT}" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="20" />

                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <TextBlock  HorizontalAlignment="Center" Text="{Binding TenBN}" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="20" />

                                        </Grid>
                                        <Grid Grid.Column="2">
                                            <TextBlock Text="{Binding Gioitinh}" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="20" />

                                        </Grid>
                                        <Grid Grid.Column="3">
                                            <TextBlock Text="{Binding SDT}" HorizontalAlignment="Center" VerticalAlignment="Center"  FontFamily="Segoe UI" FontSize="20"/>

                                        </Grid>
                                        <Grid Grid.Column="4">
                                            <TextBlock Text="{Binding  NGSinh,StringFormat=dd/MM/yyyy}" HorizontalAlignment="Center" VerticalAlignment="Center"  FontFamily="Segoe UI" FontSize="20"/>
                                        </Grid>
                                        <Grid Grid.Column="5">
                                            <TextBlock Text="{Binding DiaChi}" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="20" />
                                        </Grid>
                                        <Grid Grid.Column="6">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <Button Margin="0 0 15 4" Width="50" Height="50" HorizontalAlignment="Right" >
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Grid>
                                                                <Image Source="{StaticResource icRepair}" Stretch="UniformToFill"/>
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                                <Button Margin="0 0 0 4"  Width="50" Height="50" Padding="0 0 0 10" HorizontalAlignment="Right" >
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Grid>
                                                                <Image Source="{StaticResource icDelete}" Stretch="UniformToFill"/>
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                        <Border BorderBrush="Black" BorderThickness="0 0 0 1" Margin="0,0,10,0" Grid.ColumnSpan="7" />
                                    </Grid>
                                </Border>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
