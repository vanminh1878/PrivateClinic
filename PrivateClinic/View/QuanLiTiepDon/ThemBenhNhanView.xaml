<Page x:Class="PrivateClinic.View.QuanLiTiepDon.ThemBenhNhanView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PrivateClinic.View.QuanLiTiepDon"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="490" d:DesignWidth="924"
      Title="ThemBenhNhanView">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Text="Thêm bệnh nhân"
                       FontFamily="Segoe UI"
                       FontWeight="Bold"
                       FontSize="30"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Họ và tên:"
                           Margin="80 0 0 0"
                           FontFamily="Segoe UI"
                           FontWeight="Regular"
                           FontSize="22"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                <Border Width="400" Height="40" Margin="55 0 0 0" BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" CornerRadius="10">
                    <Grid>
                        <TextBox  Width="370"
                                  Height="35"
                                  Margin="20 0 0 0"
                                  TextAlignment="Left"
                                  FontSize="18"
                                  Background="White"
                                  BorderBrush="Transparent"
                                  BorderThickness="0"
                                  FontFamily="Segoe UI"
                                  FontWeight="Thin"
                                  FontStyle="Italic"
                                  materialDesign:HintAssist.Hint="Nhập họ và tên"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Giới tính:"
                     Margin="80 0 0 0"
                     FontFamily="Segoe UI"
                     FontWeight="Regular"
                     FontSize="22"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
                <Border Width="150" Height="40" Margin="65 0 0 0" BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" CornerRadius="10">
                    <Grid>
                        <ComboBox
                            Height="40"
                            Width="140"
                            HorizontalAlignment="Left"
                            Background="Transparent"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="5"
                            BorderThickness="0"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Ngày sinh:"
                     Margin="80 0 0 0"
                     FontFamily="Segoe UI"
                     FontWeight="Regular"
                     FontSize="22"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
                <Border Width="200" Height="40" Margin="50 0 0 0" BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" CornerRadius="10">
                    <Grid>
                        <DatePicker Width="170"
                                     VerticalAlignment="Center"
                                     FontSize="14"
                                     materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                     FontFamily="Roboto Mono"
                                     x:Name="NgBD">
                        </DatePicker>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="4">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Số điện thoại:"
                     Margin="80 0 0 0"
                     FontFamily="Segoe UI"
                     FontWeight="Regular"
                     FontSize="22"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
                <Border Width="300" Height="40" Margin="20 0 0 0" BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" CornerRadius="10">
                    <Grid>
                        <TextBox  Width="240"
                            Height="35"
                            HorizontalAlignment="Left"
                            Margin="20 0 0 0"
                            TextAlignment="Left"
                            FontSize="18"
                            Background="White"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            FontFamily="Segoe UI"
                            FontWeight="Thin"
                            FontStyle="Italic"
                            materialDesign:HintAssist.Hint="Nhập số điện thoại"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="5">
            <StackPanel  Orientation="Horizontal">
                <TextBlock Text="Địa chỉ:"
                     Margin="80 0 0 0"
                     FontFamily="Segoe UI"
                     FontWeight="Regular"
                     FontSize="22"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
                <Border Width="400" Height="40" Margin="80 0 0 0" BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" CornerRadius="10">
                    <Grid>
                        <TextBox
                            Height="35"
                            Margin="20,2,25,2"
                            TextAlignment="Left"
                            FontSize="18"
                            Background="White"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            FontFamily="Segoe UI"
                            FontWeight="Thin"
                            FontStyle="Italic"
                            materialDesign:HintAssist.Hint="Nhập địa chỉ"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="6">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Content="       Hủy (F2)" FontSize="22" FontFamily="Segoe UI" FontWeight="Bold" Margin="5 0 22 0"  Width="170" Height="50" HorizontalAlignment="Right" >
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border BorderBrush="Transparent" Background="#D51F2A" CornerRadius="10">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="5" Color="Black" Opacity="0.5" BlurRadius="5"/>
                                    </Border.Effect>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Image HorizontalAlignment="Left" Source="{StaticResource icCancel}"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="       Thêm (F1)" FontSize="22" FontFamily="Segoe UI" FontWeight="Bold" Margin="5 0 30 0"  Width="170" Height="50" HorizontalAlignment="Right" >
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border BorderBrush="Transparent" Background="#348F6C" CornerRadius="10">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="5" Color="Black" Opacity="0.5" BlurRadius="5"/>
                                    </Border.Effect>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Image HorizontalAlignment="Left" Source="{StaticResource icAdd}"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
