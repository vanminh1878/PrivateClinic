Grid.Column="0"
Margin="10,0,50,10"
HorizontalAlignment="Center"
VerticalAlignment="Center"
                           FontSize="22"
Text="Giá Nhập:" />
                            <Border
Grid.Column="1"
Width="180"
Height="40"
Margin="0,0,0,10"
HorizontalAlignment="Left"
BorderBrush="Black"
BorderThickness="0.7"
CornerRadius="10">

                                <TextBox
    x:Name="GiaNhap"
    Width="180"
    Height="40"
    Padding="15,0,0,0"
    HorizontalAlignment="Left"
    VerticalAlignment="Center"
    VerticalContentAlignment="Center"
                               FontSize="20"
    materialDesign:HintAssist.Hint="Nhập giá nhập" />

                            </Border>

                        </WrapPanel>
                    </Grid>
                    <Grid Grid.Row="2">
                        <WrapPanel VerticalAlignment="Center">
                            <TextBlock
Grid.Column="0"
Margin="10,0,50,10"
HorizontalAlignment="Center"
VerticalAlignment="Center"
                           FontSize="22"
Text="Ngày nhập:" />
                            <Border
Grid.Column="1"
Width="220"
Height="40"
Margin="-13,0,0,10"
HorizontalAlignment="Left"
BorderBrush="Black"
BorderThickness="0.7"
CornerRadius="10">

                                <DatePicker
    x:Name="Ngaynhap"
    Width="200"
    Height="40"
    Padding="15,0,0,0"
                                    
    HorizontalAlignment="Left"
    VerticalAlignment="Center"
    VerticalContentAlignment="Center"
                               FontSize="20"
    materialDesign:HintAssist.Hint="Chọn ngày nhập" />

                            </Border>

                        </WrapPanel>
                    </Grid>
                    <Grid Grid.Row="3">
                        <WrapPanel VerticalAlignment="Center">
                            <TextBlock
Grid.Column="0"
Margin="10,0,50,10"
HorizontalAlignment="Center"
VerticalAlignment="Center"
                           FontSize="22"
Text="Ngày hết hạn:" />
                            <Border
Grid.Column="1"
Width="230"
Height="40"
Margin="-37,0,0,10"
HorizontalAlignment="Left"
BorderBrush="Black"
BorderThickness="0.7"
CornerRadius="10">

                                <DatePicker
    x:Name="Ngayhethan"
    Width="210"
    Height="40"
    Padding="15,0,0,0"
                                    
    HorizontalAlignment="Left"
    VerticalAlignment="Center"
    VerticalContentAlignment="Center"
                               FontSize="20"
    materialDesign:HintAssist.Hint="Chọn ngày hết hạn" />

                            </Border>

                        </WrapPanel>
                    </Grid>
                </Grid>
            </Grid>
