<Window
    x:Class="PrivateClinic.View.QuanLiKhoThuoc.ThemThuocMoiView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:PrivateClinic.View.QuanLiKhoThuoc"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ThemThuocMoiViewPage"
    Title="ThemThuocMoiView"
    Height="632"
    Width="877"
    ResizeMode="NoResize"
Background="Transparent"
AllowsTransparency="True"
    WindowStyle="None"
    FontFamily="Segoe UI"
    TextElement.FontSize="22"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">

    <Border
        Padding="10"
        Background="White"
        BorderBrush="DarkGray"
        BorderThickness="0.7"
        CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock
    Margin="10"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    FontSize="30"
    FontWeight="Bold"
    Text="Nhập thuốc" />
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <RadioButton Grid.Column="0" GroupName="ThuocGroup" HorizontalAlignment="Right" Content="Thuốc cũ" Margin="0 0 40 0" FontSize="25" FontFamily="Segoe UI" FontWeight="DemiBold" />

                    <RadioButton Grid.Column="1" GroupName="ThuocGroup" HorizontalAlignment="Left" Content="Thuốc mới" Margin="40 0 0 0" FontSize="25" FontFamily="Segoe UI" FontWeight="DemiBold" />
                </Grid>

            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <WrapPanel VerticalAlignment="Center">
                            <TextBlock
     Grid.Column="0"
     Margin="10,0,50,10"
     HorizontalAlignment="Center"
     VerticalAlignment="Center"
                                FontSize="22"
     Text="Mã thuốc:" />
                            <Border
     Grid.Column="1"
     Width="150"
     Height="40"
     Margin="0,0,0,10"
     HorizontalAlignment="Left"
     BorderBrush="Black"
     BorderThickness="0.7"
     CornerRadius="10">

                                <TextBox
         x:Name="MaThuoc"
         Width="180"
         Height="40"
         Padding="15,0,0,0"
         HorizontalAlignment="Left"
         VerticalAlignment="Center"
         VerticalContentAlignment="Center"
                                    FontSize="20"
         materialDesign:HintAssist.Hint="Mã thuốc" />

                            </Border>

                        </WrapPanel>
                    </Grid>
                    <Grid Grid.Row="1">
                        <WrapPanel VerticalAlignment="Center">
                            <TextBlock
Grid.Column="0"
Margin="10,0,50,10"
HorizontalAlignment="Center"
VerticalAlignment="Center"
                           FontSize="22"
Text="Tên thuốc:" />
                            <Border
Grid.Column="1"
Width="180"
Height="40"
Margin="0,0,0,10"
HorizontalAlignment="Left"
BorderBrush="Black"
BorderThickness="0.7"
CornerRadius="10">

                                <TextBox
    x:Name="TenThuoc"
    Width="180"
    Height="40"
    Padding="15,0,0,0"
    HorizontalAlignment="Left"
    VerticalAlignment="Center"
    VerticalContentAlignment="Center"
                               FontSize="20"
    materialDesign:HintAssist.Hint="Nhập tên thuốc" />

                            </Border>

                        </WrapPanel>
                    </Grid>
                    <Grid Grid.Row="2">
                        <WrapPanel VerticalAlignment="Center">
