<Window x:Class="PrivateClinic.View.MessageBox.YesNoMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrivateClinic.View.MessageBox"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Width="350"
        Height="200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        mc:Ignorable="d"
        Title="YesNoMessageBox">
    <Grid>
        <Border
            Background="White"
            BorderBrush="Black"
            BorderThickness="1.2"
            CornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition />
                    <RowDefinition Height="45" />
                </Grid.RowDefinitions>
                <Border Background="#008001" CornerRadius="12,12,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="30" />
                        </Grid.ColumnDefinitions>
                        <Image Source="{StaticResource icStethoscope}" />
                        <TextBlock
                            x:Name="txtChuDe"
                            Grid.Column="1"
                            FontSize="20"
                            Margin="5,0,0,0"
                            Foreground="White"
                            FontWeight="DemiBold"
                            Text="Chủ đề" />
                        <Button
                            x:Name="btnClose"
                            Grid.Column="2"
                            BorderThickness="0"
                            Content="X"
                            Cursor="Hand"
                            FontSize="15"
                            Background="White"
                            Click="btnClose_Click"
                            Foreground="#a4dccb">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Width="20"
                                        Height="20"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="9">
                                        <ContentPresenter
                                            Margin="0,0,0,2"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>
                <!--  Phần thông tin hiển thị  -->
                <TextBlock
                    x:Name="txtMessage"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="18"
                    TextWrapping="Wrap" />
                <!--  Phần nút yes no  -->
                <Grid Grid.Row="2">
                    <Button
                        Name="btnNo"
                        Width="90"
                        Margin="120,0,0,0"
                        Background="#93a9c0"
                        Click="btnNo_Click"
                        Content="NO" />
                    <!--  Nút xác nhận sửa thông tin  -->
                    <Button
                        Name="btnYes"
                        Width="90"
                        Background="#38c0aa"
                        Margin="0,0,110,0"
                        Click="btnYes_Click"
                        Content="YES" />
                </Grid>
            </Grid>

        </Border>
    </Grid>
</Window>
